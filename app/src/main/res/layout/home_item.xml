<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="184dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardBackgroundColor="@color/gray50"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:src="@drawable/cla"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />
<ImageView
        android:id="@+id/class_img"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />


    <LinearLayout
        android:background="@color/scrim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center|bottom"
        >

        <TextView
        android:background="@color/scrim"
        android:gravity="center"
        android:id="@+id/class_text"
        android:text="Mohamed"
        android:textColor="@color/white"
        android:textSize="@dimen/smal_text_size"
        android:textStyle="bold"
        android:layout_gravity="bottom|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <TextView
            android:background="@color/scrim"
            android:id="@+id/class_code_text"
            android:text="IS 300"
            android:gravity="center"
            android:textSize="@dimen/smal_text_size"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center|bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/scrim"
            android:gravity="center">
        <TextView

        android:padding="4dp"
        android:id="@+id/teacher_first_name"
        android:text="Allan"
        android:textSize="@dimen/smal_text_size"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
            <TextView

                android:padding="4dp"
                android:id="@+id/teacher_last_name"
                android:text="Tom"
                android:textSize="@dimen/smal_text_size"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center|bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
